<h2><%= @list.name %></h2>
<p><%= @list.description %></p>

<h3>Stuff to do</h3>
<ul>
	<% @list.tasks.incomplete.each do |task| %>
		<% if task.id %>
			<li><%= task.description %> - <%= button_to "Complete", 
																			  complete_task_path(@list.id, task.id) %></li>
		<% end %>
	<% end %>
</ul>

<hr />

<h3>Stuff I've done</h3>
<ul id="completed">
	<% @list.tasks.completed.each do |task| %>
		<% if task.id %>
			<li><%= task.description %></li>
		<% end %>
	<% end %>
</ul>

<hr />

<%= form_for [@list, @task] do |f| %>
	<p>
		<%= f.text_field :description %>
		<%= f.submit %>
	</p>
<% end %>

<hr />
<%= link_to "Back to all lists", lists_path %>